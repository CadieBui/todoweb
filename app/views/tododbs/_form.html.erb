<%= form_with(model: tododb) do |form| %>
  <% if tododb.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tododb.errors.count, "error") %> prohibited this tododb from being saved:</h2>

      <ul>
        <% tododb.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title , size: 40%>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content , cols: 80, rows: 20%>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority, options_for_select(Tododb.priorities.map {|key, value| [key.titleize, Tododb.priorities.key(value)]}, tododb.priority) %>

  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, options_for_select(Tododb.statuses.map {|key, value| [key.titleize, Tododb.statuses.key(value)]}, tododb.status) %>
  </div>

  <div>
    <%= form.label :startDate, style: "display: block" %>
    <%= form.date_field :startDate %>
  </div>

  <div>
    <%= form.label :endDate, style: "display: block" %>
    <%= form.date_field :endDate %>

  </div>

  <div>
    <%= form.label :label, style: "display: block" %>
    <%= form.select :label, options_for_select(Tododb.labels.map {|key, value| [key.titleize, Tododb.labels.key(value)]}, tododb.label) %>

  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
